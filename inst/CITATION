citHeader("To cite ProbCast in publications use:")

bibentry(
 bibtype="INPROCEEDINGS",
 title="{ProbCast}: Open-source  Production, Evaluation and Visualisation of Probabilistic Forecasts",
 booktitle="16th Probabilistic Methods Applied to Power Systems Conference",
 year="2020",
 author="Jethro Browell and Ciaran Gilbert",
 textVersion="J. Browell and C. GIlbert (2020), ProbCast: Open-source  Production, Evaluation and Visualisation of Probabilistic Forecasts, 16th Probabilistic Methods Applied to Power Systems Conference.")
 

citHeader(Publications using ProbCast:)
 
bibentry(
  bibtype = Article,
  author    = {Ciaran Gilbert and Jethro Browell and David McMillan},
  title     = {Probabilistic access forecasting for improved offshore operations},
  doi       = {10.1016/j.ijforecast.2020.03.007},
  journal   = {International Journal of Forecasting},
  month     = {may},
  publisher = {Elsevier {BV}},
  year      = {2020}
)


